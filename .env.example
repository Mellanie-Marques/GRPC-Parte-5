# .env.example
# Copie este arquivo para .env e configure conforme necessário
# cp .env.example .env

# =============================================
# BANCO DE DADOS - MYSQL
# =============================================

# Senha do usuário root do MySQL
MYSQL_ROOT_PASSWORD=minhasenha

# Bancos de dados a serem criados
MYSQL_DATABASE_ORDER=order_db
MYSQL_DATABASE_PAYMENT=payment

# =============================================
# ORDER SERVICE
# =============================================

# Porta gRPC do Order Service
ORDER_PORT=3000

# Configuração do banco de dados para Order
ORDER_DB_HOST=mysql
ORDER_DB_PORT=3306
ORDER_DB_USER=root
ORDER_DB_PASSWORD=minhasenha
ORDER_DB_NAME=order_db

# URLs dos serviços dependentes
PAYMENT_SERVICE_URL=payment:3001
SHIPPING_SERVICE_URL=shipping:3002

# =============================================
# PAYMENT SERVICE
# =============================================

# Porta gRPC do Payment Service
PAYMENT_PORT=3001

# Configuração do banco de dados para Payment
PAYMENT_DB_HOST=mysql
PAYMENT_DB_PORT=3306
PAYMENT_DB_USER=root
PAYMENT_DB_PASSWORD=minhasenha
PAYMENT_DB_NAME=payment

# =============================================
# SHIPPING SERVICE
# =============================================

# Porta gRPC do Shipping Service
SHIPPING_PORT=3002

# =============================================
# AMBIENTE
# =============================================

# Ambiente de execução
# development, staging, production
ENV=development

# =============================================
# LOGGING
# =============================================

# Nível de log
# DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# =============================================
# DOCKER
# =============================================

# Image registry (para produção)
REGISTRY=docker.io

# Tag das imagens
IMAGE_TAG=latest

# =============================================
# BACKUP
# =============================================

# Diretório para backup de dados
BACKUP_DIR=/backups

# Frequência de backup (em horas)
BACKUP_FREQUENCY=24
